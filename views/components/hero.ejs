<!-- Hero Section -->
<section class="hero-section">
  <div class="hero-wave-bg">
    <svg class="hero-waves" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" class="wave-1"></path>
      <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" class="wave-2"></path>
      <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" class="wave-3"></path>
    </svg>
  </div>
  <div class="hero-particles">
    <div class="particle particle-1"></div>
    <div class="particle particle-2"></div>
    <div class="particle particle-3"></div>
    <div class="particle particle-4"></div>
  </div>
  <div class="container position-relative">
    <div class="row align-items-center min-vh-80">
      <div class="col-lg-7">
        <div class="hero-content">
          <div class="hero-accent-line mb-4"></div>
          <h1 class="hero-title display-4 fw-bold mb-4">
            <%= heroTitle || 'Ingrid Chemicals Pvt Ltd' %>
          </h1>
          <p class="hero-subtitle lead mb-4">
            <%= heroSubtitle || 'Leading provider of high-quality mining chemicals and industrial equipment with over 20 years of industry expertise and innovation.' %>
          </p>
          <div class="hero-features mb-4">
            <div class="feature-item">
              <i class="bi bi-check-circle-fill text-success me-2"></i>
              <span>ISO 9001:2015 Certified</span>
            </div>
            <div class="feature-item">
              <i class="bi bi-check-circle-fill text-success me-2"></i>
              <span>Global Mining Solutions</span>
            </div>
            <div class="feature-item">
              <i class="bi bi-check-circle-fill text-success me-2"></i>
              <span>20+ Years of Excellence</span>
            </div>
          </div>
          <div class="hero-buttons d-flex flex-column flex-sm-row gap-3">
            <a href="/products" class="btn btn-primary btn-lg px-4 py-3">
              <i class="bi bi-arrow-right-circle me-2"></i>Discover Our Products
            </a>
            <a href="/contact" class="btn btn-outline-primary btn-lg px-4 py-3">
              <i class="bi bi-chat-dots me-2"></i>Request Consultation
            </a>
          </div>
        </div>
      </div>
      <div class="col-lg-5 d-none d-lg-block">
        <div class="hero-visual">
          <div class="product-carousel">
            <% if (typeof products !== 'undefined' && products && products.length > 0) { %>
              <% products.slice(0, 6).forEach((product, index) => { %>
                <div class="product-card" style="--delay: <%= index * 0.5 %>s;">
                  <img src="<%= product.image || 'https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80' %>" alt="<%= product.name %>" class="product-card-img">
                  <div class="product-card-overlay">
                    <h6 class="product-card-title"><%= product.name %></h6>
                    <% if (product.price) { %>
                      <span class="product-card-price">$<%= product.price %></span>
                    <% } %>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <!-- Fallback static cards -->
              <div class="product-card" style="--delay: 0s;">
                <img src="https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80" alt="Mining Chemical" class="product-card-img">
                <div class="product-card-overlay">
                  <h6 class="product-card-title">Mining Chemicals</h6>
                  <span class="product-card-price">$99.99</span>
                </div>
              </div>
              <div class="product-card" style="--delay: 0.5s;">
                <img src="https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80" alt="Industrial Equipment" class="product-card-img">
                <div class="product-card-overlay">
                  <h6 class="product-card-title">Industrial Equipment</h6>
                  <span class="product-card-price">$299.99</span>
                </div>
              </div>
              <div class="product-card" style="--delay: 1s;">
                <img src="https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&q=80" alt="Safety Gear" class="product-card-img">
                <div class="product-card-overlay">
                  <h6 class="product-card-title">Safety Gear</h6>
                  <span class="product-card-price">$49.99</span>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
