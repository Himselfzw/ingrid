<!DOCTYPE html>
<html lang="en">
<%- include('./components/head', { title: 'Home - Ingrid Chemicals' }) %>
<body>
  <%- include('./components/header', { currentPage: 'home' }) %>

  <%- include('./components/hero', { heroTitle: content.heroTitle, heroSubtitle: content.heroSubtitle, products: products }) %>

  <!-- About Section -->
  <section class="about-section">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-6">
          <h2 class="section-title"><%= content.aboutTitle || 'About Ingrid Chemicals' %></h2>
          <p><%= content.aboutText1 || 'Founded in 2003, Ingrid Chemicals has established itself as a trusted partner in the mining industry, providing specialized chemical solutions and equipment to enhance operational efficiency and safety.' %></p>
          <p><%= content.aboutText2 || 'Our commitment to quality, innovation, and customer satisfaction has made us the preferred choice for mining operations across the region.' %></p>
          <a href="/about" class="btn btn-outline-primary">Learn More</a>
        </div>
        <div class="col-lg-6">
          <img src="https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Mining Operation" class="img-fluid rounded shadow">
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats-section">
    <div class="container">
      <div class="row text-center">
        <div class="col-md-3 col-6 mb-4">
          <div class="stat-item">
            <div class="stat-number">20+</div>
            <div class="stat-label">Years Experience</div>
          </div>
        </div>
        <div class="col-md-3 col-6 mb-4">
          <div class="stat-item">
            <div class="stat-number">150+</div>
            <div class="stat-label">Products</div>
          </div>
        </div>
        <div class="col-md-3 col-6 mb-4">
          <div class="stat-item">
            <div class="stat-number">500+</div>
            <div class="stat-label">Clients Served</div>
          </div>
        </div>
        <div class="col-md-3 col-6 mb-4">
          <div class="stat-item">
            <div class="stat-number">24/7</div>
            <div class="stat-label">Support</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Products Section -->
  <section class="py-5">
    <div class="container">
      <h2 class="section-title center">Featured Products</h2>
      <p class="text-center mb-5">Explore our range of high-performance mining chemicals and equipment</p>
      
      <div class="row">
        <% if (products.length > 0) { %>
          <% products.slice(0, 3).forEach(product => { %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card card-product">
                <img src="<%= product.image || 'https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80' %>" class="card-img-top" alt="<%= product.name %>">
                <div class="card-body">
                  <h5 class="card-title"><%= product.name %></h5>
                  <p class="card-text"><%= product.description.substring(0, 120) %>...</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <% if (product.price) { %>
                      <span class="text-primary fw-bold">$<%= product.price %></span>
                    <% } %>
                    <a href="/products/<%= product._id %>" class="btn btn-primary">View Details</a>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-12 text-center py-4">
            <p class="text-muted">No products available at the moment.</p>
          </div>
        <% } %>
      </div>
      
      <div class="text-center mt-4">
        <a href="/products" class="btn btn-outline-primary">View All Products</a>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-5 bg-light">
    <div class="container">
      <h2 class="section-title center">Why Choose Us</h2>
      <p class="text-center mb-5">We deliver excellence through our commitment to quality and innovation</p>
      
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="feature-box">
            <div class="feature-icon">
              <i class="bi bi-award"></i>
            </div>
            <h4>Quality Assurance</h4>
            <p>All our products undergo rigorous testing to meet the highest industry standards and specifications.</p>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="feature-box">
            <div class="feature-icon">
              <i class="bi bi-truck"></i>
            </div>
            <h4>Fast Delivery</h4>
            <p>We maintain an extensive inventory to ensure prompt delivery to meet your operational timelines.</p>
          </div>
        </div>
        <div class="col-md-4 mb-4">
          <div class="feature-box">
            <div class="feature-icon">
              <i class="bi bi-headset"></i>
            </div>
            <h4>Expert Support</h4>
            <p>Our team of technical experts provides comprehensive support and customized solutions.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- News Section -->
  <section class="py-5">
    <div class="container">
      <h2 class="section-title center">Latest News</h2>
      <p class="text-center mb-5">Stay updated with industry trends and company announcements</p>
      
      <div class="row">
        <% if (posts.length > 0) { %>
          <% posts.slice(0, 3).forEach(post => { %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card card-news">
                <div class="card-body">
                  <span class="news-date"><i class="bi bi-calendar-event me-1"></i> <%= new Date(post.createdAt).toLocaleDateString() %></span>
                  <h5 class="card-title mt-2"><%= post.title %></h5>
                  <p class="card-text"><%= post.content.substring(0, 120) %>...</p>
                  <a href="/news/<%= post._id %>" class="btn btn-outline-primary">Read More</a>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-12 text-center py-4">
            <p class="text-muted">No news available at the moment.</p>
          </div>
        <% } %>
      </div>
      
      <div class="text-center mt-4">
        <a href="/news" class="btn btn-outline-primary">View All News</a>
      </div>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="contact-info">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <h2 class="section-title center">Get In Touch</h2>
          <p class="mb-5">Have questions about our products or services? Our team is ready to assist you.</p>
          
          <div class="row justify-content-center">
            <div class="col-md-4 mb-4">
              <div class="contact-item justify-content-center">
                <div class="contact-icon">
                  <i class="bi bi-telephone"></i>
                </div>
                <div>
                  <h5>Phone</h5>
                  <p><%= content.contactPhone || '+1 (555) 123-4567' %></p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-4">
              <div class="contact-item justify-content-center">
                <div class="contact-icon">
                  <i class="bi bi-envelope"></i>
                </div>
                <div>
                  <h5>Email</h5>
                  <p><%= content.contactEmail || 'info@ingridchemicals.com' %></p>
                </div>
              </div>
            </div>
            <div class="col-md-4 mb-4">
              <div class="contact-item justify-content-center">
                <div class="contact-icon">
                  <i class="bi bi-geo-alt"></i>
                </div>
                <div>
                  <h5>Address</h5>
                  <p><%= content.contactAddress || '123 Industrial Park, Mining City' %></p>
                </div>
              </div>
            </div>
          </div>
          
          <a href="/contact" class="btn btn-primary mt-3">Contact Us</a>
        </div>
      </div>
    </div>
  </section>

  <%- include('./components/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>