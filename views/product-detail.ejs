<!DOCTYPE html>
<html lang="en">
<%- include('./components/head', { title: product.name + ' - Ingrid Chemicals' }) %>
<body>
  <%- include('./components/header', { currentPage: 'products' }) %>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6">
        <% if (product.image) { %>
          <img src="/uploads/<%= product.image %>" class="img-fluid" alt="<%= product.name %>">
        <% } else { %>
          <img src="https://via.placeholder.com/400x300" class="img-fluid" alt="<%= product.name %>">
        <% } %>
      </div>
      <div class="col-md-6">
        <h1><%= product.name %></h1>
        <p class="lead"><%= product.description %></p>
        <p class="text-success h4">$<%= product.price %></p>
        <% if (product.category) { %>
          <p><strong>Category:</strong> <%= product.category.name %></p>
        <% } %>
        <p><small class="text-muted">Added on <%= product.createdAt.toDateString() %></small></p>
        <a href="/products" class="btn btn-secondary">Back to Products</a>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
